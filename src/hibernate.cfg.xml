<?xml version='1.0' encoding='utf-8'?><!DOCTYPE hibernate-configuration PUBLIC "-
//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="connection.url">jdbc:mysql://localhost/supermercado</property>
		<property name="connection.username">root</property>
		<property name="connection.password">root</property>
		<property name="connection.pool_size">10</property>
		<property name="dialect">
			br.ucb.util.HibernateMeuMysql5Dialect
		</property>
		<property name="show_sql">true</property>
		<property name="current_session_context_class">thread</property>
		<property name="hbm2ddl.auto">validate</property>
		<property name="cache.provider_class">
			org.hibernate.cache.NoCacheProvider
		</property>
		<mapping class="br.ucb.beans.Produto" />
		<mapping class="br.ucb.beans.UsuarioSistema"/>
		<mapping class="br.ucb.beans.UsuarioCliente"/>
		<mapping class="br.ucb.beans.Cliente"/>
		
	</session-factory>
</hibernate-configuration>