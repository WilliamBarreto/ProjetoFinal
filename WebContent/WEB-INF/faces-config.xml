<?xml version="1.0" encoding="UTF-8"?>

<faces-config
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
    version="2.0">
	<managed-bean>
		<managed-bean-name>produtoManagedBean</managed-bean-name>
		<managed-bean-class>br.ucb.managedBean.ProdutoManagedBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>usuarioSistemaManagedBean</managed-bean-name>
		<managed-bean-class>br.ucb.managedBean.UsuarioSistemaManagedBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>usuarioClienteManagedBean</managed-bean-name>
		<managed-bean-class>br.ucb.managedBean.UsuarioClienteManagedBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>clienteManagedBean</managed-bean-name>
		<managed-bean-class>br.ucb.managedBean.ClienteManagedBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<navigation-rule>
		<display-name>index</display-name>
		<from-view-id>/index.jsp</from-view-id>
		<navigation-case>
			<from-outcome>restrito</from-outcome>
			<to-view-id>/loginAdmin.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>loginAdmin</display-name>
		<from-view-id>/loginAdmin.jsp</from-view-id>
		<navigation-case>
			<from-outcome>autorizado</from-outcome>
			<to-view-id>/menu.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>loginAdmin</display-name>
		<from-view-id>/loginAdmin.jsp</from-view-id>
		<navigation-case>
			<from-outcome>naoAutorizado</from-outcome>
			<to-view-id>/loginAdmin.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>menu</display-name>
		<from-view-id>/menu.jsp</from-view-id>
		<navigation-case>
			<from-action>#{produtoManagedBean.listar}</from-action>
			<from-outcome>produto</from-outcome>
			<to-view-id>/restrito/produtoLista.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>restrito/produtoLista</display-name>
		<from-view-id>/restrito/produtoLista.jsp</from-view-id>
		<navigation-case>
			<from-outcome>incluirEditar</from-outcome>
			<to-view-id>/restrito/produtoForm.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>restrito/produtoForm</display-name>
		<from-view-id>/restrito/produtoForm.jsp</from-view-id>
		<navigation-case>
			<from-outcome>raiz</from-outcome>
			<to-view-id>/restrito/produtoLista.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>restrito/produtoLista</display-name>
		<from-view-id>/restrito/produtoLista.jsp</from-view-id>
		<navigation-case>
			<from-outcome>raiz</from-outcome>
			<to-view-id>/menu.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>restrito/produtoForm</display-name>
		<from-view-id>/restrito/produtoForm.jsp</from-view-id>
		<navigation-case>
			<from-action>#{produtoManagedBean.salvar}</from-action>
			<from-outcome>sucesso</from-outcome>
			<to-view-id>/restrito/produtoForm.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>

</faces-config>
